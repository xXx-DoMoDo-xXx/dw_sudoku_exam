            <Entry Grid.Row="5" Grid.Column="7" Style="{StaticResource Button}" Text="6"/>
            <Entry Grid.Row="3" Grid.Column="8" Style="{StaticResource Button}" Text="7"/>
            <Entry Grid.Row="4" Grid.Column="8" Style="{StaticResource Button}" Text="8"/>
            <Entry Grid.Row="5" Grid.Column="8" Style="{StaticResource Button}" Text="9"/>

            <!-- Third Row -->
            <Entry Grid.Row="6" Grid.Column="0" Style="{StaticResource Button}" Text="1"/>
