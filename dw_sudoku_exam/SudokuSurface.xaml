            <Entry Grid.Row="4" Grid.Column="2" Style="{StaticResource Button}" Text="8"/>
            <Entry Grid.Row="5" Grid.Column="2" Style="{StaticResource Button}" Text="9"/>

            <Entry Grid.Row="3" Grid.Column="3" Style="{StaticResource Button}" Text="1"/>
            <Entry Grid.Row="4" Grid.Column="3" Style="{StaticResource Button}" Text="2"/>
            <Entry Grid.Row="5" Grid.Column="3" Style="{StaticResource Button}" Text="3"/>
            <Entry Grid.Row="3" Grid.Column="4" Style="{StaticResource Button}" Text="4"/>
            <Entry Grid.Row="4" Grid.Column="4" Style="{StaticResource Button}" Text="5"/>
            <Entry Grid.Row="5" Grid.Column="4" Style="{StaticResource Button}" Text="6"/>
            <Entry Grid.Row="3" Grid.Column="5" Style="{StaticResource Button}" Text="7"/>
