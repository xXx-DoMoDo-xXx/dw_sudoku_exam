            <Entry Grid.Row="7" Grid.Column="2" Style="{StaticResource Button}" Text="8"/>
            <Entry Grid.Row="8" Grid.Column="2" Style="{StaticResource Button}" Text="9"/>

            <Entry Grid.Row="6" Grid.Column="3" Style="{StaticResource Button}" Text="1"/>
            <Entry Grid.Row="7" Grid.Column="3" Style="{StaticResource Button}" Text="2"/>
            <Entry Grid.Row="8" Grid.Column="3" Style="{StaticResource Button}" Text="3"/>
